<%- include('../partials/header')%>


<% reciept.forEach(reciept => {%>
  <div class="reciept">
    <a href="/reciept/<%= reciept_id %>">
      <%=reciept.name%>
    </a>
  </div>
<%}); %>

<h1><%= title %></h1>
<p><strong>reciept ID:</strong> <%=reciept._id %></p>
<p><strong>Total Amount:</strong> <%=reciept.totalAmount %></p>
<h2>Ordered Dishes:</h2>
<ul>
    <%reciept.orderedDishes.forEach(dish => { %>
        <li>Name: <%= dish.name %>, Price: <%= dish.price %>, Quantity: <%= dish.quantity %></li>
    <% }); %>
</ul>

<%- include('../partials/footer')%>