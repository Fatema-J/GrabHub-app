<div class="dishes">
  <% if(restaurantMenu){ %>
    <% restaurantMenu.forEach(dish =>{%>
      <div class="dish">
      <img src="<%= dish.imageUrl %>" alt="<%=dish.Item%> Image" class="dish-image"/>
      <div class="dish-details">
      <h3><%=dish.Item%></h3>
      <p class="price">Price: <span><%=dish.price%></span></p>
      <p class="Description">Description: <span><%=dish.description%></span></p>
      <% if(basket){ %>
      <form id="add-dish-quantity" action="/baskets/<%=basket._id%>/ordered-item" method="POST">
        <input type="hidden" name="dish" value="<%= dish._id %>">
        <input type="number" name="quantity" value="1" min="1">

        <button type="submit">Add</button>
      </form>
      <% } %>
    </div>
  </div>
  <hr class="dish-separator">
    <% }) %>
    <% } %>
</div>

<a href="/baskets"> Click to proceed </a><br>
<p><strong>OR</strong></p>
<a href="/restaurants">Check more Restaurants </a>
